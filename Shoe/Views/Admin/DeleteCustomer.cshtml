@model Shoe.Models.KHACHHANG

@{
    ViewBag.Title = "DeleteCustomer";
    Layout = "~/Views/Admin/_LayoutManager.cshtml";
}

<h2>Xóa thông tin tài khoản khách hàng</h2>

<h3>Bạn có chắc là xóa không?</h3>

<div class="row">

    <div class="col-lg-12">
        <!-- General Data Block -->
        <div class="block">
            <!-- General Data Title -->
            <div class="block-title">
                <h2><i class="fa fa-pencil"></i> <strong>Chỉnh sửa</strong> Sản phẩm</h2>
            </div>
            <div class="form-horizontal form-bordered">
                <div class="form-group">
                    <label class="col-md-3 control-label" for="product-name">Họ tên khách hàng</label>
                    <div class="col-md-9">
                        @Html.DisplayFor(model => model.HoTen)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="product-name">Email</label>
                    <div class="col-md-9">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="product-name">Địa chỉ</label>
                    <div class="col-md-9">
                        @Html.DisplayFor(model => model.DiachiKH)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="product-name">Điện thoại</label>
                    <div class="col-md-9">
                        @Html.DisplayFor(model => model.DiachiKH)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="product-name">Ngày sinh</label>
                    <div class="col-md-9">
                        @Html.DisplayFor(model => model.Ngaysinh)
                    </div>
                </div>
                

                <div class="form-group form-actions">
                    <div class="col-md-9 col-md-offset-3">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-deaf"></i> Delete</button>
                            <button type="reset" class="btn btn-sm btn-primary"><a style="color:white; text-decoration:none;" href="@Url.Action("AccountView", "Admin")"><i class="fa fa-repeat"></i> Return</a></button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
