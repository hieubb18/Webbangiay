    .col_item {
        width: 200px;
    }

    .col_item_tool {
        width: 100px;
    }

    .style_td > a, b, input {
        width: 150px;
        color: #222222;
    }

    .style_td a, .style_td input {
        color: #007bff;
    }

    .style_td > input:hover {
        cursor: pointer;
    }

    .style_td > b {
        margin: 15px 0;
        padding: 0 0 15px;
    }
    b.soluong {
        text-align: center;
        margin-left:20px;
        height: 10px;
        width: 10px;
        padding: 5px 5px;
        border: 1px solid #dccdcd;
        border-radius: 2px;
    }
    b.returnGiohang {
       
    }
        b.returnGiohang a {
            color:gray;
            font-size: 12pt;
            font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 14px 16px;
            border: 1px solid #9ac7f3;
            background-color: #9ac7f3;
